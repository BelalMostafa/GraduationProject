    <Page.BottomAppBar>
        <AppBar VerticalAlignment="Stretch" >
            <StackPanel HorizontalAlignment="Right">
                <AppBarButton x:Name="btn_suggest" Click="btn_suggest_Click" Icon="People"/>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Page.Resources>
